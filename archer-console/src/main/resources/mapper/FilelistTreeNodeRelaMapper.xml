<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mr.archer.dao.FilelistTreeNodeRelaMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mr.archer.entity.FilelistTreeNodeRela">
        <id column="id" property="id" />
        <result column="treeid" property="treeid" />
        <result column="nodeid" property="nodeid" />
        <result column="event" property="event" />
        <result column="sortno" property="sortno" />
        <result column="isrequired" property="isrequired" />
        <result column="isinuse" property="isinuse" />
        <result column="createuser" property="createuser" />
        <result column="createtime" property="createtime" />
        <result column="createorg" property="createorg" />
        <result column="updateuser" property="updateuser" />
        <result column="updatetime" property="updatetime" />
        <result column="updateorg" property="updateorg" />
    </resultMap>

    <select id="selectTreeNodeRelaList" resultType="com.mr.archer.entity.FilelistTreeNodeRela">
        select
        ftnr.*,
        fn.name,
        fn.isinuse as nodeisinuse,
        fn.filetype,
        fn.count
        from filelist_tree_node_rela ftnr
        left join filelist_node fn on fn.id=ftnr.nodeid
        where ftnr.treeid = #{treeid}
        <if test="name != null and name != ''">
            and fn.name like concat('%',#{name},'%')
        </if>
    </select>
</mapper>
